@using test.ViewModels
@model CreateVaccinationViewModel

@{
    ViewData["Title"] = "Add Vaccinations";
}

<section class="theme-section">
    <div class="form-container">
        <div class="form-header">
            <h1 class="form-title">Vaccination Details</h1>
            <p class="form-description">Record vaccinations for this medical record</p>
        </div>

        <form asp-action="Create" method="post" class="medical-form" id="vaccineForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MedicalRecordId" />

            <div class="form-group">
                <label class="form-label">Does the animal need vaccines?</label>
                <div class="radio-group">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="NeedsVaccines" value="true" id="needsVaccinesYes">
                        <label class="form-check-label" for="needsVaccinesYes">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="NeedsVaccines" value="false" id="needsVaccinesNo" checked>
                        <label class="form-check-label" for="needsVaccinesNo">No</label>
                    </div>
                </div>
            </div>

            <div id="vaccineInputSection" style="display: none;">
                <div class="form-group">
                    <label class="form-label">Add Vaccine</label>
                    <div class="input-group">
                        <input type="text" id="vaccineNameInput" class="form-input" placeholder="Enter vaccine name">

                        <button type="button" id="addVaccineBtn" class="theme-cta" style="width: auto; margin-top: 0;">Add</button>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Vaccines List</label>
                    <ul id="vaccineList" class="list-group">
                        <!-- Vaccines will be added here -->
                    </ul>
                </div>
            </div>
            
            <!-- Container for hidden inputs -->
            <div id="hiddenVaccinesContainer">

            </div>

            <button type="submit" class="theme-cta mt-4">
                <i class="fas fa-save"></i> Save Vaccinations
            </button>
        </form>
    </div>
</section>
