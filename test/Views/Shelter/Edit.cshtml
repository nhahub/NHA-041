@using test.ViewModels
@model EditProductViewModel
@{
    ViewData["Title"] = "Edit Product";
}

<section class="theme-section">
    <div class="form-container">
        <div class="form-header">
            <h1 class="form-title">Edit Product</h1>
            <p class="form-description">Update product details</p>
        </div>
        <form asp-action="Edit" method="post" enctype="multipart/form-data" class="animal-form">

            <input type="hidden" asp-for="ProductId" />

            <input type="hidden" asp-for="Type" />

            <div class="form-group">
                <label class="form-label">Product Name</label>
                <input asp-for="Name" type="text" class="form-input" placeholder="Enter product name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Product Type</label>
                <input type="text" class="form-input bg-light" value="@Model.Type" readonly disabled />
                <small class="text-muted">Product type cannot be changed</small>
            </div>

            <div class="form-group">
                <label class="form-label">Product Photo</label>
                @if (!string.IsNullOrEmpty(Model.CurrentPhotoUrl))
                {
                    <div class="mb-2">
                        <img src="@Model.CurrentPhotoUrl" alt="Current Photo" class="img-thumbnail" style="max-height: 150px;" />
                    </div>
                }
                <input asp-for="Photo" type="file" class="form-input" accept="image/*" />
                <small class="text-muted">Upload a new photo to replace the current one (optional)</small>
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Price</label>
                <input asp-for="Price" type="number" class="form-input" placeholder="Enter product price" step="0.01" min="0" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Quantity</label>
                <input asp-for="Quantity" type="number" class="form-input" placeholder="Enter product quantity" step="1" min="0" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Description</label>
                <input asp-for="Disc" type="text" class="form-input" placeholder="Enter product description" />
                <span asp-validation-for="Disc" class="text-danger"></span>
            </div>

            <button type="submit" class="theme-cta">
                <i class="fas fa-save"></i>
                Save Changes
            </button>
            <a asp-action="Index" class="btn btn-link mt-3">Cancel</a>
        </form>
    </div>
</section>
