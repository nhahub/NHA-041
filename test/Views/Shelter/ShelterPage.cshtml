@model test.ViewModels.ShelterIndexViewModel
@using Microsoft.AspNetCore.Identity
@using test.Models
@inject SignInManager<ApplicationUser> signInManager
@{
    var username = ViewBag.Username as string;
    var phonenumber = ViewBag.phonenumber as string;
    var email = ViewBag.email as string;
    var userId = ViewBag.userid as string;
    var shelterId = ViewBag.ShelterId as string;
    var location = ViewBag.location as string;
    var isAuthenticated = signInManager.IsSignedIn(User);
    ViewData["Title"] = "Shelter Page - " + username;
}

<section class="shelter-hero" style="background: linear-gradient(135deg, #fff0f5 0%, #fff 100%); padding: 4rem 0; border-bottom: 1px solid #eee; margin-top: 2rem;">
    <div class="container">
        <div class="d-flex align-items-center gap-4">
            <div class="shelter-avatar" style="width: 100px; height: 100px; background: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 3rem; color: #db98b7; box-shadow: 0 10px 30px rgba(219, 152, 183, 0.2);">
                <i class="fas fa-building"></i>
            </div>
            <div>
                <h1 class="shelter-name" style="font-size: 2.5rem; font-weight: 800; color: #333; margin-bottom: 0.5rem;">@username</h1>
                <div class="d-flex gap-3 align-items-center flex-wrap">
                    <span class="badge bg-white text-pink border border-pink rounded-pill px-3 py-2">
                        <i class="fas fa-shield-alt me-2"></i>Trusted Shelter
                    </span>
                    @if (!string.IsNullOrEmpty(location))
                    {
                        <a href="@location" class="text-muted"><i class="fas fa-map-marker-alt me-2"></i>Location</a>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container my-5">
    <div class="row g-4">
        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="theme-card p-4 sticky-top" style="top: 2rem; z-index: 1;">
                <h3 class="h5 mb-4 fw-bold text-dark"><i class="fas fa-info-circle me-2 text-pink"></i>Contact Information</h3>
                
                <div class="d-flex align-items-center gap-3 mb-4">
                    <div class="icon-box bg-pink-subtle rounded-circle p-3 text-pink">
                        <i class="fas fa-envelope fa-lg"></i>
                    </div>
                    <div>
                        <div class="small text-muted text-uppercase fw-bold">Email</div>
                        <div class="fw-medium text-dark">@email</div>
                    </div>
                </div>

                <div class="d-flex align-items-center gap-3 mb-4">
                    <div class="icon-box bg-pink-subtle rounded-circle p-3 text-pink">
                        <i class="fas fa-phone fa-lg"></i>
                    </div>
                    <div>
                        <div class="small text-muted text-uppercase fw-bold">Phone</div>
                        <div class="fw-medium text-dark">@(string.IsNullOrEmpty(phonenumber) ? "Not provided" : phonenumber)</div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(location))
                {
                    <div class="d-flex align-items-center gap-3">
                        <div class="icon-box bg-pink-subtle rounded-circle p-3 text-pink">
                            <i class="fas fa-map-marker-alt fa-lg"></i>
                        </div>
                        <div>
                            <a href="@location" class="small text-muted text-uppercase fw-bold">Location</a>
                        </div>
                    </div>
                }

                <div class="mt-4 pt-4 border-top">
                    @if (isAuthenticated)
                    {
                        <a asp-controller="Chat" asp-action="Index" asp-route-receiverId="@shelterId" class="btn btn-pink w-100 rounded-pill py-2 fw-bold">
                            <i class="fas fa-comments me-2"></i>Chat with Shelter
                        </a>
                    }
                    else
                    {
                        var chatUrl = Url.Action("Index", "Chat", new { receiverId = shelterId });
                        <a href="javascript:void(0)" onclick="showLoginModal('@Html.Raw(chatUrl)')" class="btn btn-pink w-100 rounded-pill py-2 fw-bold">
                            <i class="fas fa-comments me-2"></i>Chat with Shelter
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-8">
            
            <!-- Animals Section -->
            <div class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="h4 fw-bold m-0"><i class="fas fa-paw me-2 text-pink"></i>Available Animals</h2>
                    <span class="badge bg-pink rounded-pill px-3 py-2">@(Model.Animals?.Count() ?? 0) Animals</span>
                </div>

                <div class="row g-4">
                    @if (Model.Animals == null || !Model.Animals.Any())
                    {
                        <div class="col-12">
                            <div class="theme-empty-wrap w-100">
                                <div class="theme-empty">
                                    <div class="icon"><i class="fas fa-paw"></i></div>
                                    <div class="title">No Animals Available</div>
                                    <div class="msg">This shelter hasn't listed any animals yet.</div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        @foreach(var animal in Model.Animals)
                        {
                            <div class="col-md-6">
                                <div class="animal-card h-100">
                                    <div class="animal-image-container">
                                        <img src="@animal.Photo" alt="@animal.Name" class="animal-image">
                                        <div class="animal-type-badge">
                                            <i class="fas fa-paw"></i> @animal.Type
                                        </div>
                                    </div>
                                    <div class="animal-info">
                                        <h3 class="animal-name">@animal.Name</h3>
                                        <div class="animal-details">
                                            <div class="animal-detail-item">
                                                <i class="fas fa-calendar-alt"></i>
                                                <span>Age: @animal.Age</span>
                                            </div>
                                            @if (!string.IsNullOrEmpty(animal.Gender))
                                            {
                                                <div class="animal-detail-item">
                                                    @if (animal.Gender == "Male")
                                                    {
                                                        <i class="fas fa-mars"></i>
                                                        <span>Male</span>
                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-venus"></i>
                                                        <span>Female</span>
                                                    }
                                                </div>
                                            }
                                        </div>
                                        <div class="mt-3 d-flex flex-column gap-2">
                                            <a asp-controller="Animal" asp-action="Details" asp-route-id="@animal.AnimalId" class="btn btn-pink w-100">
                                                <i class="fas fa-eye"></i> View Details
                                            </a>
                                            @if (isAuthenticated)
                                            {
                                                <a asp-controller="Chat" asp-action="Index" asp-route-receiverId="@animal.Userid" asp-route-animalId="@animal.AnimalId" class="btn btn-outline-pink w-100">
                                                    <i class="fas fa-comments"></i> Chat for the animal
                                                </a>
                                            }
                                            else
                                            {
                                                var animalChatUrl = Url.Action("Index", "Chat", new { receiverId = animal.Userid, animalId = animal.AnimalId });
                                                <a href="javascript:void(0)" onclick="showLoginModal('@Html.Raw(animalChatUrl)')" class="btn btn-outline-pink w-100">
                                                    <i class="fas fa-comments"></i> Chat for the animal
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

            <!-- Products Section -->
            <div>
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="h4 fw-bold m-0"><i class="fas fa-shopping-bag me-2 text-pink"></i>Available Products</h2>
                    <span class="badge bg-pink rounded-pill px-3 py-2">@(Model.Products?.Count() ?? 0) Products</span>
                </div>

                <div class="theme-grid products-grid">
                    @if (Model.Products == null || !Model.Products.Any())
                    {
                        <div class="theme-empty-wrap w-100">
                            <div class="theme-empty">
                                <div class="icon"><i class="fas fa-box-open"></i></div>
                                <div class="title">No Products Available</div>
                                <div class="msg">This shelter hasn't added any products yet. Check back later!</div>
                            </div>
                        </div>
                    }
                    else
                    {
                        @foreach(var product in Model.Products)
                        {
                            <div class="theme-card h-100 d-flex flex-column">
                                @if (!string.IsNullOrEmpty(product.Photo))
                                {
                                    <div class="product-image mb-3">
                                        <img src="@product.Photo" alt="@product.Type" class="img-fluid rounded" style="width: 100%; height: 150px; object-fit: cover;" />
                                    </div>
                                }
                                <div class="product-hero mb-3">
                                    <div class="title h5 fw-bold text-dark" style="margin-bottom: 5px;">
                                        @product.Name
                                    </div>

                                    <div class="text-muted small">
                                        <i class="fas fa-tag fa-xs me-1"></i> @product.Type
                                    </div>
                                </div>

                                <div class="product-desc text-muted mb-4 flex-grow-1 truncate-2">@product.Disc</div>
                                
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="h4 fw-bold text-pink m-0">$@product.Price.ToString("F2")</span>
                                    </div>
                                    
                                    @if (isAuthenticated)
                                    {
                                        <form method="post" asp-action="create" asp-controller="Order" class="d-flex gap-2">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="userid" value="@userId" />
                                            <input type="hidden" name="productid" value="@product.Productid" />
                                            <input type="hidden" name="productname" value="@product.Type" />
                                            <input type="hidden" name="productPrice" value="@product.Price" />
                                            
                                            @if (product.Quantity > 0)
                                            {
                                                <input type="number" name="Quantity" class="form-control rounded-pill text-center" style="width: 80px;" min="1" max="@product.Quantity" value="1" />
                                                <button type="submit" class="btn btn-pink rounded-pill flex-grow-1">
                                                    <i class="fas fa-shopping-cart me-2"></i>Add to Cart
                                                </button>
                                            }
                                            else
                                            {
                                                <div class="w-100 text-center">
                                                    <span class="badge bg-secondary rounded-pill px-4 py-2 w-100">
                                                        <i class="fas fa-ban me-2"></i>Out of Stock
                                                    </span>
                                                </div>
                                            }
                                        </form>
                                    }
                                    else
                                    {
                                        @if (product.Quantity > 0)
                                        {
                                            var cartUrl = Url.Action("Shelterpage", "Shelter", new { Id = shelterId });
                                            <div class="d-flex gap-2">
                                                <input type="number" class="form-control rounded-pill text-center" style="width: 80px;" min="1" max="@product.Quantity" value="1" disabled />
                                                <button type="button" onclick="showLoginModal('@Html.Raw(cartUrl)')" class="btn btn-pink rounded-pill flex-grow-1">
                                                    <i class="fas fa-shopping-cart me-2"></i>Add to Cart
                                                </button>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="w-100 text-center">
                                                <span class="badge bg-secondary rounded-pill px-4 py-2 w-100">
                                                    <i class="fas fa-ban me-2"></i>Out of Stock
                                                </span>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
