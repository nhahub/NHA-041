@using Microsoft.AspNetCore.Identity
@using test.Models
@inject SignInManager<ApplicationUser> signInManager;


@{

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnimalApp</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.21.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <header>
               <nav class="navbar">
            <!-- Make the logo clickable -->
            <a asp-controller="home" asp-action="Index" class="logo">HappyPaws Haven</a>
            <ul class="nav-links">
                @if (signInManager.IsSignedIn(User)&&User.IsInRole("User"))
                {
                    <li><a asp-controller="animal" asp-action="Index" >Animal list</a></li>
                    <li><a asp-controller="Request" asp-action="Index" >Requests</a></li>
                    <li><a asp-controller="Shelter" asp-action="UserView">Shelters</a></li>
                    <li class="dropdown">
                        <a href="#" class="position-relative dropdown-toggle" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-bell"></i>
                            <span id="notification-badge">
                                @await Component.InvokeAsync("Notifications")
                            </span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown" id="notification-list" style="min-width: 300px; max-height: 400px; overflow-y: auto;">
                            <li><span class="dropdown-item text-muted text-center">Loading...</span></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="position-relative dropdown-toggle" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-circle fa-lg"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                            <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index"><i class="fas fa-user me-2"></i>My Profile</a></li>
                            <li><a class="dropdown-item" asp-controller="Order" asp-action="MyOrders"><i class="fas fa-box me-2"></i>My Orders</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" asp-controller="account" asp-action="logout"><i class="fas fa-sign-out-alt me-2"></i>Log Out</a></li>
                        </ul>
                    </li>
                }
                else if (signInManager.IsSignedIn(User) && User.IsInRole("Shelter"))
                {
                    <li><a asp-controller="shelter" asp-action="Index" class="login">Product list</a></li>
                    <li class="dropdown">
                        <a href="#" class="position-relative dropdown-toggle" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-bell"></i>
                            <span id="notification-badge">
                                @await Component.InvokeAsync("Notifications")
                            </span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown" id="notification-list" style="min-width: 300px; max-height: 400px; overflow-y: auto;">
                            <li><span class="dropdown-item text-muted text-center">Loading...</span></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="position-relative dropdown-toggle" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-circle fa-lg"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                            <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index"><i class="fas fa-user me-2"></i>My Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" asp-controller="account" asp-action="logout"><i class="fas fa-sign-out-alt me-2"></i>Log Out</a></li>
                        </ul>
                    </li>
                }
                else if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                {
                    <li><a asp-controller="Admin" asp-action="Index" class="login">Dashboard</a></li>
                    <li><a asp-controller="Admin" asp-action="Animals" class="login">Animals</a></li>
                    <li><a asp-controller="Admin" asp-action="Users" class="login">Users</a></li>
                    <li><a asp-controller="account" asp-action="logout" class="login">Log Out</a></li>
                }
                else
                {
                    <li><a asp-controller="animal" asp-action="Index">Animal list</a></li>
                    <li><a asp-controller="Shelter" asp-action="UserView">Shelters</a></li>
                    <li><a asp-controller="account" asp-action="login" class="login">Login</a></li>
                    <li><a asp-controller="account" asp-action="register" class="login">Register</a></li>
                }
            <div class="menu-toggle">&#9776;</div>
        </nav>
    </header>
    
    <!-- Floating Cart Button -->
    @if (signInManager.IsSignedIn(User) && User.IsInRole("User"))
    {

        <button id="open-cart-button" class="floating-cart-button" aria-label="Open shopping cart">
            <i class="fas fa-shopping-cart"></i>
            <span id="cart-count" class="cart-badge">@await Component.InvokeAsync("CartWidget")</span>
        </button>
    }

    <div class="main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Cart Modal -->
    <div id="cart-overlay"></div>
    <div id="cart-modal-container">
        <div id="cart-modal-header">
            <h5>Your Shopping Cart</h5>
            <button id="cart-close-button">&times;</button>
        </div>
        
        <div id="cart-modal-body">
            <p>Loading cart...</p>
        </div>
        
        <div id="cart-modal-footer">
            <a asp-action="ProccessPayment" asp-controller="Transaction" class="button button-primary">Go to Checkout</a>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <p>&copy; 2025 HappyPaws Haven. All rights reserved.</p>
            <ul class="socials">
                <li><a href="#">Facebook</a></li>
                <li><a href="#">Instagram</a></li>
                <li><a href="#">Twitter</a></li>
            </ul>
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            // Global SignalR Connection for Notifications
            const notificationConnection = new signalR.HubConnectionBuilder()
                .withUrl("/chathub")
                .build();

            notificationConnection.on("updateNotifications", function (senderId) {
                // Check if we are currently in a chat with this sender
                const currentChatReceiverId = $("#receiverId").val();
                
                if (currentChatReceiverId && currentChatReceiverId === senderId) {
                    // We are in the chat, so don't update the badge immediately
                    return; 
                }

                // Reload the notification badge content
                $.get("/Chat/GetNotificationCount", function (data) {
                    $("#notification-badge").html(data);
                });
            });

            notificationConnection.start().catch(function (err) {
                return console.error(err.toString());
            });
        });
    </script>
    <!-- Login Required Modal -->
    @if (!signInManager.IsSignedIn(User))
    {
        <div class="modal fade" id="loginRequiredModal" tabindex="-1" aria-labelledby="loginRequiredModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow-lg" style="border-radius: 20px; overflow: hidden;">
                    <div class="modal-header border-0" style="background: linear-gradient(135deg, #db98b7 0%, #e8b4c9 100%); padding: 2rem;">
                        <div class="text-center w-100">
                            <i class="fas fa-lock fa-3x text-white mb-3"></i>
                            <h5 class="modal-title text-white fw-bold" id="loginRequiredModalLabel">Login Required</h5>
                        </div>
                    </div>
                    <div class="modal-body text-center py-4">
                        <p class="text-muted mb-0 fs-5">Please login to continue with this action.</p>
                        <p class="text-muted small">Create an account or sign in to access all features.</p>
                    </div>
                    <div class="modal-footer border-0 justify-content-center gap-3 pb-4">
                        <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">
                            <i class="fas fa-times me-2"></i>Cancel
                        </button>
                        <a href="@Url.Action("login", "Account")" class="btn btn-pink rounded-pill px-4" id="loginRedirectBtn">
                            <i class="fas fa-sign-in-alt me-2"></i>Login Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
