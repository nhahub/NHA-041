@using test.ViewModels
@model AnimalEditViewModel
@{
    ViewData["Title"] = "Edit Animal - HappyPaws Haven";
}

<!-- Edit Animal Form Section -->
<section class="add-animal-section">
    <div class="form-container">
        <div class="form-header">
            <h1 class="form-title">Edit Animal</h1>
            <p class="form-description">Update the details below to keep our furry friend's info current üêæ‚ù§Ô∏è</p>
        </div>

        <form asp-action="Edit" method="post" enctype="multipart/form-data" class="animal-form">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Id" value="@Model.Id" />
            
            <div class="form-group">
                <label asp-for="Name" class="form-label">Animal Name</label>
                <input type="text" asp-for="Name" class="form-input" placeholder="Enter animal's name" required>
            </div>

            <div class="form-group">
                <label asp-for="Age" class="form-label">Animal Age</label>
                <input type="number" asp-for="Age" class="form-input" placeholder="Enter animal's age" required>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="form-label">Animal Type</label>
                <select asp-for="Type" class="form-input" required>
                    <option value="">-- Select Animal Type --</option>
                    <option value="Dog">Dog</option>
                    <option value="Cat">Cat</option>
                    <option value="Bird">Bird</option>
                    <option value="Rabbit">Rabbit</option>
                    <option value="Hamster">Hamster</option>
                    <option value="Fish">Fish</option>
                    <option value="Turtle">Turtle</option>
                    <option value="Other">Other</option>
                </select>
            </div>

            <!-- Gender Selection -->
            <div class="form-group">
                <label asp-for="Gender" class="form-label">Gender</label>
                <div class="gender-selector">
                    <label class="gender-option">
                        <input type="radio" asp-for="Gender" value="Male">
                        <i class="fas fa-mars"></i>
                        <span>Male</span>
                    </label>
                    <label class="gender-option">
                        <input type="radio" asp-for="Gender" value="Female">
                        <i class="fas fa-venus"></i>
                        <span>Female</span>
                    </label>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Photo" class="form-label">Update Picture (Optional)</label>
                <input type="file" asp-for="Photo" class="form-file-input" data-val="false">
                <small class="text-muted">Leave empty to keep the current photo.</small>
            </div>

            <button type="submit" class="submit-btn">
                <i class="fas fa-save"></i>
                Save Changes
            </button>
        </form>
    </div>
</section>


