@using test.ViewModels
@model ProccessPaymentViewModel
@{
    ViewData["Title"] = "Complete Your Purchase";
}

<div class="container py-5 payment-process-page">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Checkout</h1>
        <p class="lead text-muted">Secure your payment safely ??</p>
    </div>

    @if (Model.orderDetails == null || !Model.orderDetails.Any())
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-shopping-cart fa-4x text-muted opacity-50"></i>
            </div>
            <h2 class="h3 mb-3">Your cart is empty</h2>
            <p class="text-muted mb-4">It looks like you haven't added any items to your cart yet.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-5 rounded-pill shadow-sm">
                <i class="fas fa-paw me-2"></i>Browse Pets
            </a>
        </div>
    }
    else
    {
        <div class="row g-5">
            <!-- Left Column: Payment Method -->
            <div class="col-md-7 col-lg-8">
                <div class="card shadow-sm border-0 rounded-3">
                    <div class="card-body p-4">
                        <h4 class="mb-4 fw-bold">Payment Method</h4>
                        
                        <form asp-action="ProccessPayment" method="post" id="payment-form">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="orderid" value="@Model.orderid" />

                            <div class="mb-4">
                                <label asp-for="selectedPaymentMethodid" class="form-label text-muted small text-uppercase fw-bold">Select Card</label>
                                
                                @if (Model.paymentMethods.Count == 0)
                                {
                                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                                        <i class="fas fa-exclamation-circle me-2"></i>
                                        <div>
                                            No payment methods available. 
                                            <a asp-action="create" asp-controller="PaymentMethod" class="alert-link">Add a new method</a>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="list-group">
                                        @foreach (var method in Model.paymentMethods)
                                        {
                                            <div class="list-group-item d-flex align-items-center justify-content-between p-3 border rounded mb-2">
                                                <label class="d-flex align-items-center gap-3 flex-grow-1 cursor-pointer m-0">
                                                    <input class="form-check-input flex-shrink-0" type="radio" asp-for="selectedPaymentMethodid" value="@method.PaymentMethodId" required style="transform: scale(1.2);">
                                                    <span class="fs-4 text-secondary">
                                                        @switch (method.MethodType?.ToLower())
                                                        {
                                                            case "visa":
                                                                <i class="fa-brands fa-cc-visa" style="color: #1A1F71;"></i>
                                                                break;
                                                            case "mastercard":
                                                                <i class="fa-brands fa-cc-mastercard" style="color: #EB001B;"></i>
                                                                break;
                                                            case "americanexpress":
                                                            case "amex":
                                                                <i class="fa-brands fa-cc-amex" style="color: #006FCF;"></i>
                                                                break;
                                                            case "discover":
                                                                <i class="fa-brands fa-cc-discover" style="color: #FF6000;"></i>
                                                                break;
                                                            case "jcb":
                                                                <i class="fa-brands fa-cc-jcb" style="color: #0B4EA2;"></i>
                                                                break;
                                                            case "dinersclub":
                                                            case "diners":
                                                                <i class="fa-brands fa-cc-diners-club" style="color: #004A97;"></i>
                                                                break;
                                                            default:
                                                                <i class="fa-solid fa-credit-card text-muted"></i>
                                                                break;
                                                        }
                                                    </span>
                                                    <span class="fw-medium">
                                                        &bull;&bull;&bull;&bull; &bull;&bull;&bull;&bull; &bull;&bull;&bull;&bull; @method.last4Digits
                                                    </span>
                                                </label>
                                                
                                                <div class="d-flex align-items-center gap-2 ms-3">
                                                    <a asp-action="Edit" asp-controller="PaymentMethod" asp-route-id="@method.PaymentMethodId" class="text-primary text-decoration-none" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    
                                                    <span id="@("deletespan" + method.PaymentMethodId)">
                                                        <a href="#" class="text-danger text-decoration-none" onclick="deleteconfirm('@method.PaymentMethodId', true); return false;" title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </span>
                                                    <span id="@("deleteConfirmSpan" + method.PaymentMethodId)" style="display:none">
                                                        <span class="small text-muted me-1">Sure?</span>
                                                        <a href="#" class="text-danger fw-bold text-decoration-none me-1" onclick="submitDeletePayment('@method.PaymentMethodId'); return false;">Yes</a>
                                                        <a href="#" class="text-secondary text-decoration-none" onclick="deleteconfirm('@method.PaymentMethodId', false); return false;">No</a>
                                                    </span>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                <span asp-validation-for="paymentMethods" class="text-danger small"></span>
                                
                                <div class="mt-3">
                                    <a asp-action="create" asp-controller="PaymentMethod" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-plus me-1"></i> Add New Card
                                    </a>
                                </div>
                            </div>

                            <hr class="my-4">

                            <button type="submit" id="submit-payment-btn" class="btn btn-primary btn-lg w-100 py-3 fw-bold shadow-sm" disabled>
                                Pay $@Model.totalprice
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Right Column: Order Summary -->
            <div class="col-md-5 col-lg-4">
                <div class="card shadow-sm border-0 rounded-3 bg-light">
                    <div class="card-body p-4">
                        <h4 class="d-flex justify-content-between align-items-center mb-4 fw-bold">
                            <span class="text-primary">Order Summary</span>
                            <span class="badge bg-primary rounded-pill">@Model.TotalQuantity</span>
                        </h4>
                        
                        <ul class="list-group list-group-flush mb-3 bg-transparent">
                            @foreach (var item in Model.GroupedItems)
                            {
                                <li class="list-group-item d-flex justify-content-between lh-sm bg-transparent px-0 py-3 border-bottom">
                                    <div>
                                        <h6 class="my-0">@item.ProductType</h6>
                                        <small class="text-muted">Quantity: @item.Quantity</small>
                                    </div>
                                </li>
                            }
                        </ul>

                        <div class="d-flex justify-content-between align-items-center py-3 border-top border-2">
                            <span class="h5 fw-bold mb-0">Total</span>
                            <span class="h4 fw-bold text-primary mb-0">$@Model.totalprice</span>
                        </div>
                    </div>
                </div>
                
                <div class="text-center mt-4 text-muted small">
                    <i class="fas fa-lock me-1"></i> Payments are secure and encrypted.
                </div>
            </div>
        </div>
    }
</div>

<form id="delete-payment-form" asp-action="Delete" asp-controller="PaymentMethod" method="post" style="display:none;">
    <input type="hidden" name="id" id="delete-payment-id" />
    @Html.AntiForgeryToken()
</form>


