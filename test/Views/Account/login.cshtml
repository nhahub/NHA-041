@using test.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<section class="auth-section">
    <div class="form-container">
        <div class="form-header">
            <h1 class="form-title">Welcome Back</h1>
            <p class="form-description">Login to continue to HappyPaws Haven</p>
        </div>

        <form asp-action="login" method="post" asp-route-ReturnUrl="@Model.returnUrl">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="email" class="form-label">Email Address</label>
                <input type="text" asp-for="email" class="form-input" placeholder="Enter your email" required>
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="password" class="form-label">Password</label>
                <input type="password" asp-for="password" class="form-input" placeholder="Enter your password" required>
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <button type="submit" class="submit-btn">
                <i class="fas fa-sign-in-alt"></i> Login
            </button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="ForgetPassword" class="text-muted" style="font-size: 0.9rem;">Forgot password?</a>
        </div>

        <div class="text-center my-4 position-relative">
            <hr class="text-muted">
            <span class="position-absolute top-50 start-50 translate-middle bg-white px-2 text-muted small">OR</span>
        </div>

        <form method="post" asp-action="ExternalLogin" asp-route-ReturnUrl="@Model.returnUrl">
            <button type="submit" class="btn btn-outline-secondary w-100 py-2 rounded-pill" name="Provider" value="@Model.ExternalLogins.FirstOrDefault().Name">
                <i class="fab fa-google me-2"></i> Login with Google
            </button>
        </form>

        <div class="auth-link">
            <p>Don't have an account? <a asp-action="register">Sign up</a></p>
        </div>
    </div>
</section>
