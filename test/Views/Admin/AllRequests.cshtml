@model List<test.Models.Request>
@using Microsoft.AspNetCore.Identity
@using test.Models
@inject UserManager<ApplicationUser> userManager
@{
    ViewData["Title"] = "All Requests";
    var requestUsers = ViewBag.RequestUsers as List<ApplicationUser> ?? new List<ApplicationUser>();
    var requestAnimals = ViewBag.RequestAnimals as List<Animal> ?? new List<Animal>();
}

<section class="admin-dashboard" style="background: linear-gradient(135deg, #fff0f5 0%, #f5d9e5 100%);">
    <div class="container">
        <!-- Header -->
        <div class="mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold text-dark mb-2">
                        <i class="fas fa-heart text-pink me-3"></i>All Requests
                    </h1>
                    <p class="text-muted lead mb-0">Review and manage all pending adoption requests</p>
                </div>
                <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-pink">
                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>

        <!-- Requests List -->
        <div class="card border-0 shadow-sm admin-card">
            <div class="card-body p-4">
                @if (Model == null || !Model.Any())
                {
                    <div class="text-center py-5">
                        <i class="fas fa-heart fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No Pending Requests</h5>
                        <p class="text-muted mb-0">All requests have been processed.</p>
                    </div>
                }
                else
                {
                    <div class="list-group list-group-flush">
                        @foreach (var request in Model)
                        {
                            var requester = requestUsers.FirstOrDefault(u => u.Id == request.Userid);
                            var animal = requestAnimals.FirstOrDefault(a => a.AnimalId == request.AnimalId);
                            
                            <div class="list-group-item border-0 px-0 py-4 border-bottom">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <h6 class="fw-bold mb-2">@(requester?.FullName ?? requester?.UserName ?? "Unknown User")</h6>
                                        <p class="text-muted small mb-1">
                                            <i class="fas fa-envelope me-2"></i>@(requester?.Email ?? "No email")
                                        </p>
                                        <p class="text-muted small mb-1">
                                            <strong>Wants to adopt:</strong> @(animal?.Name ?? "Unknown") (@(animal?.Type ?? ""))
                                        </p>
                                        <p class="text-muted small mb-0">
                                            <i class="fas fa-calendar me-2"></i>Request ID: @request.Reqid
                                        </p>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <form asp-controller="Admin" asp-action="DeleteRequest" asp-route-id="@request.Reqid" method="post" onsubmit="return confirm('Are you sure you want to delete this request?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash me-1"></i>Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</section>

