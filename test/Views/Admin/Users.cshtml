@using Microsoft.AspNetCore.Identity
@using test.Models
@model List<ApplicationUser>
@{
    ViewData["Title"] = "Manage Users";
}

<section class="theme-section" style="background: #f8f9fa; min-height: 80vh;">
    <div class="container">
        <div class="theme-header text-center mb-5">
            <h1 class="theme-title display-4 fw-bold text-dark mb-3">
                <i class="fas fa-users text-pink me-3"></i>Manage Users
            </h1>
            <p class="theme-subtitle lead text-muted">View and manage registered users</p>
        </div>

        <div class="theme-card p-4 border-0 shadow-sm bg-white rounded-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h4 fw-bold m-0"><i class="fas fa-user-friends me-2 text-pink"></i>All Users</h2>
                <span class="badge bg-pink rounded-pill px-3 py-2">@Model.Count() Users</span>
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="text-center py-5">
                    <div class="icon mb-3 text-muted" style="font-size: 3rem;">
                        <i class="fas fa-users-slash"></i>
                    </div>
                    <p class="text-muted">No users found.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="bg-light">
                            <tr>
                                <th class="border-0 py-3 ps-4 rounded-start">Username</th>
                                <th class="border-0 py-3">Email</th>
                                <th class="border-0 py-3">Phone Number</th>
                                <th class="border-0 py-3">Email Confirmed</th>
                                <th class="border-0 py-3 pe-4 rounded-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-dark">@user.UserName</td>
                                    <td>
                                        <a href="mailto:@user.Email" class="text-pink text-decoration-none">
                                            @user.Email
                                        </a>
                                    </td>
                                    <td class="text-muted">@(user.PhoneNumber ?? "N/A")</td>
                                    <td>
                                        @if (user.EmailConfirmed)
                                        {
                                            <span class="badge bg-success"><i class="fas fa-check me-1"></i>Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark"><i class="fas fa-times me-1"></i>No</span>
                                        }
                                    </td>
                                    <td class="pe-4">
                                        <div class="d-flex gap-2">
                                            <span id="@("deleteConfirmSpan" + user.Id)" style="display:none">
                                                <span class="small me-1">Sure?</span>
                                                <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger rounded-pill">Yes</a>
                                                <a href="#" onclick="deleteconfirm('@user.Id', false); return false;" class="btn btn-sm btn-primary rounded-pill">No</a>
                                            </span>
                                            <span id="@("deletespan" + user.Id)">
                                                <a href="#" onclick="deleteconfirm('@user.Id', true); return false;" class="btn btn-sm btn-outline-danger rounded-pill"><i class="fas fa-trash"></i></a>
                                            </span>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</section>
