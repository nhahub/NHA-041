@model List<test.Models.ChatMessage>
@using Microsoft.AspNetCore.Identity
@using test.Models
@inject UserManager<ApplicationUser> userManager
@{
    ViewData["Title"] = "All Messages";
}

<section class="admin-dashboard" style="background: linear-gradient(135deg, #fff0f5 0%, #f5d9e5 100%);">
    <div class="container">
        <!-- Header -->
        <div class="mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold text-dark mb-2">
                        <i class="fas fa-comments text-pink me-3"></i>All Messages
                    </h1>
                    <p class="text-muted lead mb-0">View all chat messages in the system</p>
                </div>
                <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-pink">
                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>

        <!-- Messages List -->
        <div class="card border-0 shadow-sm admin-card">
            <div class="card-body p-4">
                @if (Model == null || !Model.Any())
                {
                    <div class="text-center py-5">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No Messages</h5>
                        <p class="text-muted mb-0">No messages have been sent yet.</p>
                    </div>
                }
                else
                {
                    <div class="list-group list-group-flush">
                        @foreach (var message in Model)
                        {
                            <div class="list-group-item border-0 px-0 py-4 border-bottom">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <div class="d-flex align-items-center gap-2 mb-2">
                                            <h6 class="fw-bold mb-0">@(message.Sender?.UserName ?? "Unknown")</h6>
                                            @if (!message.read)
                                            {
                                                <span class="badge bg-danger rounded-circle unread-dot"></span>
                                            }
                                        </div>
                                        <p class="text-muted small mb-1">
                                            <i class="fas fa-envelope me-2"></i>@(message.Sender?.Email ?? "No email")
                                        </p>
                                        <p class="mb-2">@message.Message</p>
                                        <p class="text-muted small mb-0">
                                            <i class="fas fa-calendar me-2"></i>@message.Time.ToString("MM/dd/yyyy HH:mm")
                                        </p>
                                        @if (message.Receiver != null)
                                        {
                                            <p class="text-muted small mb-0">
                                                <i class="fas fa-user me-2"></i>To: @message.Receiver.UserName
                                            </p>
                                        }
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <span class="badge @(message.read ? "bg-success" : "bg-warning")">
                                            @(message.read ? "Read" : "Unread")
                                        </span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</section>

